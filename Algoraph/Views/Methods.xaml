<UserControl x:Class="Algoraph.Views.Methods"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Algoraph.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="310">
    <UserControl.Resources>

    </UserControl.Resources>


    <Border
        CornerRadius="5"      
        Background="{StaticResource DarkGradient}"
        Margin="0,0,0,0">
        <Grid>
            <ScrollViewer>
                <StackPanel Margin="5" Orientation="Vertical">
                    <CheckBox 
                        x:Name="autoClear" 
                        Checked="AutoClear_Checked"               
                        Style="{StaticResource CheckBox}"
                        Tag="Autoclear (Disables Warning)"
                        Foreground="{StaticResource RedGradient}"
                        Background="PaleVioletRed"/>

                    <CheckBox 
                        Checked="HideWeights_Checked"
                        Unchecked="HideWeights_Unchecked"
                        Style="{StaticResource CheckBox}"
                        Tag="Hide Weights"
                        Foreground="{StaticResource OrangeGradient}"
                        Background="LightSalmon"/>

                    <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                        <Button 
                            Foreground="White"
                            HorizontalAlignment="Left"
                            Click="CreateOrdered_Button"
                            Style="{StaticResource Button}"
                            FontFamily="consolas"
                            Background="{StaticResource DryGreenGradient}" 
                            Height="50" Width="200">
                            Create Ordered Nodes
                        </Button>
                        <TextBox 
                            x:Name="orderedNodesDegreeInput"
                            FontSize="15"
                            Tag="Degree"
                            Style="{StaticResource InputBox}"
                            Width="80"
                            Height="38"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" >
                        <Button 
                            Foreground="White"
                            HorizontalAlignment="Left"
                            Click="CreateRandom_Button"
                            Style="{StaticResource Button}"
                            FontFamily="consolas"
                            Background="{StaticResource DryGreenGradient}" 
                            Height="50" Width="200">
                            Create Random Nodes
                        </Button>
                        <TextBox
                            x:Name="randomNodesInput"
                            FontSize="15"
                            Tag="R1, R2"
                            Style="{StaticResource InputBox}"
                            Width="80"
                            Height="38"/>
                    </StackPanel>

                    <Button
                        Foreground="White"
                        HorizontalAlignment="Stretch"
                        Click="ConnectRandomly_Button"
                        Style="{StaticResource Button}"
                        FontFamily="consolas"
                        Background="{StaticResource OrangeGradient}" 
                        Height="50">
                        Connect Nodes Randomly
                    </Button>

                    <Button 
                        Foreground="White"
                        HorizontalAlignment="Stretch"
                        Click="CreateRandomTree"
                        Style="{StaticResource Button}"
                        FontFamily="consolas"
                        Background="{StaticResource OrangeGradient}"
                        Height="50">
                        Create Random Tree
                    </Button>

                    <Button 
                        Foreground="White"
                        HorizontalAlignment="Stretch"
                        Click="CreateComplete_Button"
                        Style="{StaticResource Button}"
                        FontFamily="consolas"
                        Background="{StaticResource OrangeGradient}"
                        Height="50">
                        Create Complete Graph
                    </Button>


                    <Button
                        Margin="0,10,0,0"
                        Foreground="LightGoldenrodYellow"
                        HorizontalAlignment="Stretch"
                        Click="Prims_Button"
                        Style="{StaticResource Button}"
                        FontFamily="consolas"
                        Background="{StaticResource PurpleGradient}"
                        Height="50">
                        Prim's Algorithm
                    </Button>

                    <Button
                        Foreground="LightGoldenrodYellow"
                        HorizontalAlignment="Stretch"
                        Click="Kruskals_Button"
                        Style="{StaticResource Button}"
                        FontFamily="consolas"
                        Background="{StaticResource PurpleGradient}"
                        Height="50">
                        Kruskal's Algorithm
                    </Button>

                    <Button 
                        Foreground="LightGoldenrodYellow"
                        HorizontalAlignment="Stretch"
                        Click="Dijkstras_Button"
                        Style="{StaticResource Button}"
                        FontFamily="consolas"
                        Background="{StaticResource PurpleGradient}"
                        Height="50">
                        Dijkstra's Algorithm
                    </Button>

                    <Button 
                        Foreground="LightGoldenrodYellow"
                        HorizontalAlignment="Stretch"
                        Click="RouteInspection_Button"
                        Style="{StaticResource Button}"
                        FontFamily="consolas"
                        Background="{StaticResource PurpleGradient}"
                        Height="50">
                        Route Inspection
                    </Button>


                    <Button 
                        Click="ClearGraph_Button"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource Button}"
                        FontFamily="consolas"
                        Background="{StaticResource RedGradient}"
                        Height="50" Width="220" FontWeight="Black">
                        CLEAR GRAPH
                    </Button>

                    <TextBlock x:Name="debug" Text=""/>
                </StackPanel>
            </ScrollViewer>
           
        </Grid>

    </Border>

</UserControl>
